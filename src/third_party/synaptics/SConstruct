import os

SOURCES=['synclient.c']

env = Environment(
    CCFLAGS=['-fno-exceptions', '-fPIC'],
)
for key in Split('CC CXX AR RANLIB LD NM CFLAGS CCFLAGS'):
  value = os.environ.get(key)
  if value != None:
    env[key] = value

env.StaticLibrary('synaptics', SOURCES)
